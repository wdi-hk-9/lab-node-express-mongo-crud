<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" integrity="sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==" crossorigin="anonymous">

</head>

<body>
  <h1>Animal Shelter</h1>

  <div class="container-fluid">
  <p>Add an animal</p>
  <form>
    <input type="text" name="animal[name]">
    <input type="text" name="animal[breed]">
    <input type="text" name="animal[dob]">
    <input type="text" name="animal[gender]">
    <input type="text" name="animal[family]">
    <input type="text" name="animal[status]">

  </form>

  <% animals.forEach(function(animals){ %>
  <ul>
    <li><%= animals.name %></li>
      <ul>
        <li> Breed: <%= animals.breed %></li>
        <li> DOB: <%= animals.dob %></li>
        <li> Gender: <%= animals.gender %></li>
        <li> Family: <%= animals.family %></li>
      </ul>
  </ul>
  <% }) %>

  </div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" integrity="sha512-K1qjQ+NcF2TYO/eI3M6v8EiNYZfA95pQumfvcVrTHtwQVDG+aHRqLi/ETn2uB+1JqwYqVG3LIvdm9lj6imS/pQ==" crossorigin="anonymous"></script>
</body>
</html>


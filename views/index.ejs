<h2>Add an animal</h2>
<form action="/animals" method="post">
  <div class="form-group">
    <label>Name</label>
    <input type="text" name="name">
  </div>
  <div class="form-group">
    <label>Breed</label>
    <input type="text" name="breed">
  </div>
  <div class="form-group">
    <label>Dob</label>
    <input type="date" name="dob">
  </div>
  <div class="form-group">
    <label>Gender</label>
    <input type="text" name="gender">
  </div>
  <div class="form-group">
    <label>Family</label>
    <input type="text" name="family">
  </div>
  <button type="submit">Leave a Pet</button>

</form>

<ul>
<% animals.forEach(function(elem){ %>
  <li><h1><a href= <%= elem["_id"] %>><%= elem.name %></a></h1></li>
  <ul>
    <li>Breed: <%= elem.breed %></li>
    <li>Dob: <%= elem.dob %></li>
    <li>Gender: <%= elem.gender %></li>
    <li>Family: <%= elem.family %></li>
    <li><form action=<%= elem["_id"] %> method="post"><button type="submit"><%= elem.status %></button></form></li>

  </ul>
<%  }) %>
</ul>